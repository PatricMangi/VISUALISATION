{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Percentage of populations in the USA that identify as black (2018).",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PatricMangi/week9HW/main/js/Aus(top).topojson",
        "format": {"type": "topojson", "feature": "Aus(top)"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PatricMangi/week9HW/main/data/percent_black_in_2018.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "mag",
          "type": "quantitative",
          "scale": {"domain": [4, 8]}
        },
        "color": {
          "field": "depth",
          "type": "quantitative",
          "scale": {"scheme": "reds"}
        }
      }
    }
  ],
  "config": {}
}
