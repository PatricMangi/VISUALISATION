{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Percentage of populations in the USA that identify as black (2018).",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/PatricMangi/week9HW/main/js/america%20(1).topojson",
    "format": {
          "type": "topojson",
          "feature": "america%20(1)"
        }
  },
  "transform": [{
      "lookup": "objects.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/PatricMangi/week9HW/main/data/percent_black_in_2018.csv"
        },
        "key": "State",
        "fields": ["Percent Black"]
      }
    }
   
  ],

 "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Percent Black",
      "type": "quantitative"
      
    },
    "tooltip": [
      {"field": "objects.NAME", "type": "nominal", "title": "State"},
      {"field": "Percent Black", "type": "quantitative"}
    ]
  }

}
